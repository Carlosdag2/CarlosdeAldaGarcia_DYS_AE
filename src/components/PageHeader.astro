---
interface Props {
    title: string;
    subtitle?: string;
    variant?: "green" | "blue" | "orange" | "purple";
    icon?: string;
    showButton?: boolean;
    buttonText?: string;
    buttonHref?: string;
}

const { 
    title, 
    subtitle, 
    variant = "green", 
    icon = "bi-list-check",
    showButton = false,
    buttonText = "",
    buttonHref = ""
} = Astro.props;
---

<div class={`page-header page-header-${variant}`}>
    <div class="container">
        <div class="row align-items-center">
            <div class={showButton ? "col-md-8" : "col"}>
                <h1 class="mb-1">{title}</h1>
                {subtitle && <p class="mb-0 opacity-75">{subtitle}</p>}
            </div>
            {showButton && (
                <div class="col-md-4 text-md-end mt-3 mt-md-0">
                    <a href={buttonHref} class="btn btn-light">
                        <i class="bi bi-plus me-1"></i>{buttonText}
                    </a>
                </div>
            )}
        </div>
    </div>
</div>
