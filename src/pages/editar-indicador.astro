---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';
import EditIndicadorForm from '../components/forms/EditIndicadorForm.jsx';

// Obtener el ID de la URL
const id = Astro.url.searchParams.get('id') || '';
---

<Layout title="Editar Indicador" currentPage="/editar-indicador">
    <PageHeader 
        title="Editar Indicador"
        subtitle="Modifica los datos del indicador"
        variant="orange"
        icon="bi-pencil-square"
    />
    
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <EditIndicadorForm client:load indicadorId={id} />
            </div>
        </div>
    </div>
</Layout>
